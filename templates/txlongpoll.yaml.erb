##
## txlongpoll configuration.
##

## The front-end service.
#
frontend:
  ## The port on which to serve.
  port: <%= @maas_txlongpoll_frontend_port %>

  ## If specified, queue names requested must have the given prefix.
  # prefix:
  <%- @maas_txlongpoll_prefix %> 
    prefix: <%= @maas_txlongpoll_prefix %>

## OOPS configuration.
#
oops:
  ## Directory in which to place OOPS reports.  Must not contain any files
  # or directories other than what the oops machinery creates there.
  #
  # directory: ""
  directory: <%= @maas_txlongpoll_oops_dir %>

  ## The reporter used when generating OOPS reports.
  # reporter: "LONGPOLL"
  reporter: <%= @maas_txlongpoll_reporter %>

## Message broker configuration.
#
broker:
  host: <%= @maas_txlongpoll_broker_host %>
  port: <%= @maas_txlongpoll_broker_port %>
  username: <%= @maas_txlongpoll_broker_user %>
  password: <%= @maas_txlongpoll_broker_passwd %>
  vhost: <%= @maas_txlongpoll_vhost %>

## Where to log. This log can be rotated by sending SIGUSR1 to the
## running server.
#
# logfile: "txlongpoll.log"
logfile: <%= @maas_txlongpoll_logfile %>
